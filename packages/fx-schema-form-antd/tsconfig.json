{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es5",
      "dom",
      "es2017",
      "es2015"
    ],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./libs",
    "importHelpers": true,
    "rootDir": "./src",
    "isolatedModules": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}